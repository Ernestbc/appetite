<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.jrpotter.appetite.mood.SwingsFragment">

    <!-- Status -->
    <TextView
        android:id="@+id/fragment_main_swings_header_start"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="@string/fragment_main_swings_header_end"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Choices -->
    <include
        android:id="@+id/fragment_main_swings_top"
        layout="@layout/include_main_swing" />

    <TextView
        android:text="@string/option"
        android:textColor="@android:color/white"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" />

    <include
        android:id="@+id/fragment_main_swings_bottom"
        layout="@layout/include_main_swing" />

</LinearLayout>
